<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class="container">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImage %>" width="700px" />
            <pre> <%= blog.body %> </pre>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="100px" />
            <%= blog.createdBy.fullname %>
        </div>

        <div class="container mt-3">
            <h3>Comments (<%= comments.length %>) </h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" placeholder="Enter a Comment" name="content" class="form-control" />
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
                <% } %>
                    <div class="mt-3">
                        <% comments.forEach(comment=> { %>
                            <img src="<%= comment.createdBy.profileImageUrl %>" width="100px" />
                            <%= comment.createdBy.fullname %>
                                <pre> <%= comment.content %></pre>
                                <% }) %>
                    </div>
        </div>
        <%- include('./partials/script') %>
</body>

</html>